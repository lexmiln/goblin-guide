{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "name",
        "bits"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "aliases": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "chapter",
                    "name"
                ],
                "properties": {
                    "chapter": {
                        "type": "number"
                    }
                }
            }
        },
        "bits": {
            "type": "array",
            "items": {
                "required": [
                    "chapter",
                    "text"
                ],
                "properties": {
                    "chapter": {
                        "type": "number"
                    }
                }
            }
        }
    },
    "additionalProperties": false
}
